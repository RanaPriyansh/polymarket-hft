OPENAI_API_KEY=

# Twitter/X API (for Semantic Sentinel bot)
TWITTER_BEARER_TOKEN=

# WebSocket Configuration (optional)
WS_RECONNECT_DELAY_MS=1000
WS_MAX_RECONNECT_ATTEMPTS=10
WS_HEARTBEAT_INTERVAL_MS=30000
